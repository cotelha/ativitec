<table width="100%" class="linhasAlternadas">
  <tr>
    <th>NOME</th>
    <th>ATIVIDADE</th>
    <th width="150px" style="text-align:center">AÇÕES</th>
  </tr>

<% @motivo_atividades.each do |motivo_atividade| %>
  <tr>
    <td><%=h motivo_atividade.nm_motivo %></td>
    <td><%=h motivo_atividade.atividade.nm_atividade %></td>
    <td align="center"><%= link_to 'Exibir', motivo_atividade %>
    <%= link_to 'Editar', edit_motivo_atividade_path(motivo_atividade) %>
    <%= link_to 'Excluir', motivo_atividade, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Novo motivo atividade', new_motivo_atividade_path, :class=>"linque_criar" %>