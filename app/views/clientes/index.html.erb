<table width="100%" class="linhasAlternadas" border="0">
  <tr>
    <th>NOME</th>
    <th width="15%">FONE</th>
    <th width="25%">EMAIL</th>
    <th width="15%">STATUS</th>
    <th width="150px" style="text-align:center">AÇÕES</th>
  </tr>
<% @clientes.each do |cliente| %>
  <tr>
    <td><%=h cliente.nm_cliente %></td>
    <td><%=h cliente.fone %></td>
    <td><%=h cliente.email %></td>
    <td><%= if cliente.status then "ATIVO" else "INATIVO" end %></td>
    <td align="center"><%= link_to 'Exibir', cliente %>
    <%= link_to 'Editar', edit_cliente_path(cliente) %>
    <%= link_to 'Excluir', cliente, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Novo cliente', new_cliente_path, :class=>"linque_criar" %>